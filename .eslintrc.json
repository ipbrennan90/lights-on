{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
		"parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
		"globals": {
			"require": true,
			"describe": true,
			"beforeEach": true,
			"afterEach": true,
			"it": true,
			"global": true
		}
}
